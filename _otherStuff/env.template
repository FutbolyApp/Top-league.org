# Template per le variabili d'ambiente - Copia questo file come env.local e configura i valori

# Database PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database

# Configurazione Server
PORT=3001
NODE_ENV=production

# JWT Secret (genera una chiave sicura)
JWT_SECRET=your-super-secret-jwt-key-here

# Configurazione CORS (opzionale)
CORS_ORIGIN=*

# Configurazione Upload (opzionale)
MAX_FILE_SIZE=52428800

# Configurazione Log (opzionale)
LOG_LEVEL=info

# Configurazione WebSocket (opzionale)
WS_PORT=3002

# Configurazione Backup (opzionale)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# Configurazione Scraping (opzionale)
SCRAPING_ENABLED=true
SCRAPING_INTERVAL=3600000

# Configurazione Notifiche (opzionale)
NOTIFICATIONS_ENABLED=true

# Configurazione Tornei (opzionale)
TOURNAMENTS_ENABLED=true

# Configurazione Finanze (opzionale)
FINANCES_ENABLED=true

# Configurazione Contratti (opzionale)
CONTRACTS_ENABLED=true

# Configurazione Offerte (opzionale)
OFFERS_ENABLED=true

# Configurazione Admin (opzionale)
ADMIN_ENABLED=true
SUPER_ADMIN_ENABLED=true

# Configurazione Debug (solo per sviluppo)
DEBUG=false 