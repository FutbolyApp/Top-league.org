      setSortField('default');
      setSortDirection('desc');
    } else if (sortField === field) {
      // Cambia direzione se √® lo stesso campo
      setSortDirection(sortDirection === 'asc' ? 'desc' : 'asc');
      } else {
      // Nuovo campo di ordinamento
